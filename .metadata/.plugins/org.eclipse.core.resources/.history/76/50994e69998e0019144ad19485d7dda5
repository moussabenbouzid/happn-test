@RestController
public class PoiController {

	@Autowired
	private PoiService service;
	
	@PostMapping("/parse")
	public int parsePoi(@RequestBody MultipartFile multipart) {
		int x = 3;
		System.out.println("mon x "+ x);
		
		BufferedReader br;
		List<String> result = new ArrayList<>();
		try {

		     String line;
		     InputStream is = multipart.getInputStream();
		     br = new BufferedReader(new InputStreamReader(is));
		     while ((line = br.readLine()) != null) {
		    	 System.out.println("line "+ line);
		          result.add(line);
		     }

		  } catch (IOException e) {
		    System.err.println(e.getMessage());       
		  }
		
		
//		readerBuilder = new CSVReaderBuilder(new FileReader("C:/Users/EI-PC-01-06-16/Documents/"
//        		+ "happn_projet2/poi-project/target/classes/fr/happn/poi/poi.tsv"));
